<Window x:Class="FireFly.UI.VideoPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FireFly.UI"
        mc:Ignorable="d"
        Title="VideoPlayer" Height="450" Width="800">
    <Grid>
        <MediaElement HorizontalAlignment="Left" Height="339" Name="mediaElement" LoadedBehavior="Manual" Margin="10,10,0,0" VerticalAlignment="Top" Width="772"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="28,371,0,0" VerticalAlignment="Top" Width="71" Height="38" Click="PlayButton"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="245,371,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="StopButton"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="130,372,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="PauseButton"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="653,371,0,0" VerticalAlignment="Top" Width="129" Height="38" Click="BrowseButton"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="404,372,0,0" TextWrapping="Wrap" Text="MediaPathTextBox" Name="MediaPathTextBox" VerticalAlignment="Top" Width="242"/>

    </Grid>
</Window>
